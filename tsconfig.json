{
  "compilerOptions": {
    "target": "es2020",
    "noImplicitAny": false,
    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  }
}